                            <div class="form-group mx-sm-3 mb-2">
                                <label for="amount" class="sr-only">Amount</label>
                                <i class=" translateY-10 coins ti-server pr-4 pt-3"></i>
                                <input type="amount" class="form-control mb-0" id="amount" placeholder="amount">
                            </div>
                            <button type="submit" class="btn btn-primary mb-2">Donate</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    {%  endif %}


