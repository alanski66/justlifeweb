{% extends "_layouts/generic-page-layout.twig" %}

{% block content %}
    {% set entries = craft.entries({
    section: 'staff',
    with: ['staffImage']
    }) %}

{#    {% include '/_includes/featured_background.twig' %}#}

    <section class="news blue  p-0" >
        <div class="container">
            <div class="row ">
                <div class="col-md-10  pb-2 ">
                    <div class="page-heading mb-4">{{ entry .title }}</div>
                </div>

            </div>
        </div>
    </section>
    <!-- Staff list Content -->

    <section class="section">
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <h2 class="mb-2">{{entry.title}}</h2>
            <p class="mb-5 col-lg-8 col-xs-12 px-0">{{entry.introText|striptags}}</p>
        </div>


        {% for entry in entries.all() %}

        {% set assets = entry.staffImage %}


        <!-- team member -->
        <div class="col-lg-3 col-sm-6 mb-4">
            <div class="card text-center">
                <a href="team-single.html">
                    <img class="card-img-top" src="{{ assets[0].getUrl('listThumb') }}" alt="{{ entry.title }}">
                </a>
                <div class="card-body card-body-2 pb-0 px-4">
                    <h5 class="card-title">{{entry.title}}</h5>
                    <h6 class="text-color mb-30"> {{ entry.staffJobTitle }}</h6>
                    <ul class="list-inline border-top d-inline-block">
                        <li class="list-inline-item">
                            <a href="#" class="text-color d-inline-block p-lg-2">
                                <i class="ti-facebook"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-color d-inline-block p-lg-2">
                                <i class="ti-twitter-alt"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-color d-inline-block p-lg-2">
                                <i class="ti-linkedin"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-color d-inline-block p-lg-2">
                                <i class="ti-google"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {% endfor %}

    </div>
    </div>
    </section>

    

{% endblock %}