{% extends "_layouts/generic-page-layout.twig" %}
{% block content %}
    {%  set layout = null %}
    <!-- Page Content -->
    {%  if entry is defined %}

        {#        {% include '/_includes/hero-featured.twig' %}#}


        <!-- service -->
        <section class="section publications mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12 text-center">
                    <h1 class="section-title section-title-border">{{ entry.title }}</h1>
                </div>

            <div class="row ">
                <div class="col-sm-12 col-md-10 offset-md-1 text-center pb-5">
                    <p class="lead">{{ entry.introText | striptags }}</p>
                </div>
            </div>


        {% set entries = craft.entries({
            section: 'publications'
        }).limit('10').orderBy('title') %}

        {% paginate entries as pageInfo, pageEntries %}
        {# card based layout #}
                <div class="container">
            <div class="row justify-content-center">
                    {#<div class="col-xs-12   mb-5">#}

                        {#{% for entry in entries %}#}
                        {% for entry in pageEntries %}

                            {% set pdfImage = entry.pdfThumbnailImage[0] ?? null %}
                            <div class="col-lg-3 col-sm-6 col-xs-12 mb-5 mb-lg-0">
                                <div class="card text-center">

                                    <div class="card-img-wrapper">

                                        {%  if  pdfImage |length %}
                                            <img class="card-img-top rounded-0" src="{{ pdfImage.getUrl() }}" alt="">
                                        {%  endif %}
                                    </div>
                                    <div class="card-body p-0">
                                        <h4 class="card-title pt-3">{{ entry.title }}</h4>




                                        <a href="{{ entry.url }}" class="btn btn-secondary translateY-25">Read More</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

            </div>
        </div><!-- /.container -->
        </section>
    {%  endif %}



{% endblock %}
