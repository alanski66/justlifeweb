{% if siteInfo.showCookieInfo %}
<link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.1.0/cookieconsent.min.css?ckcachebust=624375592" />
<style>

    @media(max-width:768px){
        html{padding-bottom:51px;}
        .cc-banner.cc-theme-edgeless .cc-btn{
            margin: 0 auto!important;
        }
    }
    @media(min-width:768px){
        html{padding-bottom:51px;}
    }
</style>
<script src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.1.0/cookieconsent.min.js?ckcachebust=624375592"></script>
<script>
    window.addEventListener("load", function(){
        window.cookieconsent.initialise({
            "palette": {
                "popup": {
                    "background": "#49494b",
                    "text": "#FFFFFF"
                },
                "button": {
                    "background": "#303032",
                    "color": "#FFFFFF"
                }
            },
            "theme": "edgeless",
            "type": "{{ siteInfo.cookieType }}",
            "content": {
                "dismiss": "{{ siteInfo.cookieDismiss | default('Got it')}}",
                "link": "{{ siteInfo.cookiePolicyLinkText | default('Learn more')}}",
                "href": "{{ siteInfo.cookiePage.one().url }}",
                "deny": "{{ siteInfo.cookieDecline | default('Decline')}}",
                "message": "{{ siteInfo.cookieMessage| default('This website uses cookies to ensure you get the best experience on our website.') }}"
            }
        })});
</script>
{% endif %}