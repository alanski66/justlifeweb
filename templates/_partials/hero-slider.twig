<section class="mb-5">
    <div class="hero-slider position-relative mb-5">
        {%  for block in entry.carousel %}
            {%  set asset = block.image.one() %}

            <div class="hero-slider-item py-160" style="background-image: url('{{ asset.url }}');" data-icon="ti-comments" data-text="{{ block.tabTitle  }}">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="hero-content">
                                <h4 class="text-uppercase mb-1 text-{{ block.textColor }}" data-duration-in=".5" data-animation-in="fadeInLeft" data-delay-in=".1"> {{ block.tabTitle  }}</h4>
                                <h1 class="font-weight-bold mb-3 text-{{ block.textColor }}" data-duration-in=".5" data-animation-in="fadeInLeft" data-delay-in=".5"> {{ block.slideTitle  }}</h1>
                                <p class="text-dark mb-50 text-{{ block.textColor }}" data-duration-in=".5" data-animation-in="fadeInLeft" data-delay-in=".9">
                                    {{ block.intro  }} </p>
                                {% if block.buttonLink | length %}
                                <a data-duration-in=".5" data-animation-in="fadeInDown" data-delay-in="1.3" href="{{ block.buttonLink.one().url }}" class="btn btn-outline text-uppercase text-{{ block.textColor }}"> {{ block.buttonText }}</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        
    </div>
</section>