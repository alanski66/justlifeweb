

<section class=" mb-5">
    <div class="mb-5 hero-slider position-relative mb-5">
        {%  for block in entry.carousel %}
{#            {%  set asset = block.image.one() %}#}
            {% set asset = block.image[0] ?? null %}
            {% if asset | length %}
                {% set transformedBannerImages = craft.imager.transformImage(asset,
                    [
                        { width: 550, height:380, position: 'center-center', jpegQuality: 75,ratio: 4/3, cropZoom:1.5 },
                        { width: 768, height:380, position: asset.getFocalPoint(), ratio: 2/1, jpegQuality: 85, zoom: 1 },
                        { width: 1024, height:380, position: asset.getFocalPoint() ,jpegQuality: 95 },
                        { width: 1200, height:380, position: asset.getFocalPoint() },
                        { width: 2400, height:530, position: asset.getFocalPoint(),ratio: 2/1 }
                    ],
                    {
                        format: 'jpg',
                        allowUpscale: true,
                        mode: 'crop',
                        jpegQuality: 90,
                        interlace: true
                    }
                    ) %}


                {% css %}
                    @media(min-width: 768px){
                        .hero-slider-item-{{ block.id }}{
                        background-image: url('{{ baseUrl ~ transformedBannerImages[3].url}}');
{#                        height:593px;#}
                        }
                    }

                    @media(min-width: 990px){
                        .slide-{{ block.id }}{
                        background-image: url('{{ baseUrl ~ transformedBannerImages[4].url}}');
                            height:593px;
                        }
                    }


                {% endcss %}
            {% endif %}
         
            <div class="slide-{{ block.id }} hero-slider-item  py-160"  data-icon="ti-comments" data-text="{{ block.tabTitle  }}">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="hero-content">
                                <h4 class="text-uppercase mb-1 text-white {{ block.textColor }}" data-duration-in=".5" data-animation-in="fadeInLeft" data-delay-in=".1"> {{ block.tabTitle  }}</h4>
                                <h1 class="font-weight-bold mb-3 text-white text-shadow {{ block.textColor }}" data-duration-in=".5" data-animation-in="fadeInLeft" data-delay-in=".5"> {{ block.slideTitle  }}</h1>
                                <p class="text-white mb-50 text-white text-shadow {{ block.textColor }}" data-duration-in=".5" data-animation-in="fadeInLeft" data-delay-in=".9">
                                    {{ block.intro |raw }} </p>
                                {% if block.buttonLink | length %}
                                <a data-duration-in=".5" data-animation-in="fadeInDown" data-delay-in="1.3" href="{{ block.buttonLink.one().url }}" class="btn btn-secondary text-uppercase text-{{ block.textColor }}"> {{ block.buttonText }}</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
</section>