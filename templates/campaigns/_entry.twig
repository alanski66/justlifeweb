                                        {#                                            </div>#}
                                        {#                                        </div>#}
                                        {#                                    </div>#}
                                        {#                                {% endif %}#}
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-6 donorfy ">
                                    <div class="p-3 shadow">
                                    <p class="text-white mb-1 mb-md-3">{{ entry.introText }}</p>
                                    <div id="mc_embed_signup">
                                        {{ entry.subscribeForm | raw }}
