{% extends "_layouts/site.twig" %}




{% block content %}


    {#{% include '/_includes/featured_background.twig' %}#}

    <section class="blue heading  p-0" >
        <div class="container">
            <div class="row ">
                <div class="col-md-10  pb-2 ">
                    <div class="page-heading mb-4">Our Staff</div>
                </div>

            </div>
        </div>
    </section>


    <!-- Staff list Content -->
    {% if entry is defined %}

        {% set entries = craft.entries({
        section: 'staff',
        with: ['staffImage'],
        id:  'not ' ~ entry.id
        }) %}
        {% set staffimage = entry.staffImage.one() %}
        <section class="gray p-4 {{ entry.type }}">
        <div class="container">
            <div class="row">

                <div class="col-lg-12">
                    <div class="media mt-4">
                        {% if staffimage %}
                            <img class="rounded-image mr-3" src="{{ staffimage.getUrl('listThumb') }}" alt="Generic placeholder image">
                        {% else %}
                            <img class="mr-3" src="https://placehold.it/200x200" alt="Generic placeholder image">
                        {% endif %}
                        <div class="media-body">
                            {% set jobtitle = entry.staffJobTitle ?? 'Staff job title goes here.' %}
                            <h4 class="mt-0">{{ entry.title }} <span>: {{ jobtitle }}</span></h4>




                            <div class="description">
                                {% set text = entry.staffRoleDescription ?? 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.' %}

                                {{ text }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </section>
        <section class="stafflist">
        <div class="container-fluid  bg-white page">
            <div class="container">
                <div class="row ">


                    <div class="col-lg-12 mt-5">
                        <h3 class="gray">Other Staff</h3>
                    </div>


                        <div class="col-xs-12 col-md-12 col-lg-7 col-xl-7">
                            <div class="row">
                                {% for entry in entries.all() %}

                                    {% set assets = entry.staffImage %}

                                    {% set introtext = entry.projectIntroText ?? 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.' %}

                                    {# start card layout #}
                                    <div class="col-lg-4 col-sm-6 portfolio-item">
                                        <div class="card mb-3" data-mh="my-group">
                                            <a href="{{ entry.url }}">
                                                {% if assets |length %}

                                                    <img class="card-img-top" src="{{ assets[0].getUrl('listThumb') }}" alt="{{ entry.title }}">
                                                {% else %}
                                                    <img class="card-img-top" src="https://placehold.it/200x200" alt="">
                                                {% endif %}
                                            </a>
                                            <div class="card-body p-3">
                                                <h4 class="card-title">
                                                    <a href="{{ entry.url }}">{{ entry.title }}</a>
                                                </h4>
                                                <p class="card-text">
                                                    {{ entry.staffJobTitle }}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    {# end card layout #}
                                {% endfor %}
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-12 col-lg-4 offset-lg-1 col-xl-4 offset-xl-1">
                            <div class="side-box">
                            {# Get the (one!) related entry from the "menu" structure #}
                            {% import '_macros' as macros %}
                            {% set rootOfSection = craft.entries.section('pages').one() %}
                            {# Check if there are descendant entries #}
                            {% if rootOfSection.hasDescendants() %}
                                <h3>About</h3>

                                <ul class="list-unstyled">
                                    {# Get entries to build the sub-menu #}
                                    {% set subMenu = craft.entries.descendantOf(rootOfSection) %}

                                    {# Output the sub menu #}
                                    {% for entry in subMenu.all() %}
                                        {%  set staffactive = "" %}
                                        {% if entry.slug == 'our-staff' %} {%  set staffactive = "active" %} {% endif %}


                                        <li class=" {{ staffactive }} {{ macros.isMenuActive(entry.slug)|trim }} level{{ entry.level }}">
                                            <a href="{{ siteUrl }}{{ entry.uri }}"
                                               class=" level{{ entry.level }}">{{ entry.title }}</a>
                                        </li>

                                    {% endfor %}

                                </ul>
                            {% endif %}
                            </div>
                        </div>



                </div>
            </div>
        </div><!-- /.container -->
        </section>

    {% endif %}
{% endblock %}
